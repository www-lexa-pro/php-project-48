{
    "name": "hexlet/code",
    "bin": [
        "bin/gendiff"
    ],
    "autoload": {
        "files": [
            "src/Differ.php",
            "src/Parsers.php",
            "src/Formatters.php",
            "src/Formatters/Json.php",
            "src/Formatters/Plain.php",
            "src/Formatters/Stylish.php"
        ],
        "psr-4": {
            "Differ\\Tests\\": "tests",
            "Differ\\": "src"
        }
    },
    "description": "Generate diff",
    "type": "project",
    "authors": [
        {
            "name": "alex",
            "email": "aaa@yandex.ru"
        }
    ],
    "scripts": {
        "phpcs": "phpcs",
        "phpunit": "phpunit"
    },
    "require": {
        "php": ">=8.1",
        "docopt/docopt": "^1.0",
        "symfony/yaml": "^5.2",
        "phpstan/extension-installer": "^1.1.0",
        "phpstan/phpstan": "^0.12.70|^1.10.24",
        "lstrojny/functional-php": "^1.17"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5",
        "phpunit/phpunit": "^9",
        "hexlet/phpstan-fp": "^1.1"
    },
    "license": "MIT",
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
